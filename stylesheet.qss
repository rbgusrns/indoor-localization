/* stylesheet.qss */
QPushButton {
    background-color: #4CAF50; /* Green */
    border-radius: 2px;
    border: none;
    color: white;
    padding: 60px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-family: 'Malgun Gothic', 'Arial', sans-serif;
    font-size: 16px;
    margin: 4px 2px;
    transition-duration: 0.4s;
    cursor: pointer;
}

QPushButton:hover {
    background-color: white;
    color: black;
    border: 2px solid #4CAF50;
}